// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Game {
  id               String     @id @default(cuid())
  code             String     @unique
  ownerTgId        String     // tgId мастера
  started          Boolean    @default(false)
  currentLocation  Location?  @relation("CurrentLocation", fields: [currentLocationId], references: [id])
  currentLocationId String?
  createdAt        DateTime   @default(now())
  players          Player[]
  items            Item[]
  locations        Location[]
  messages         Message[]
}

model Player {
  id        String   @id @default(cuid())
  tgId      String   // уникальный tgId
  name      String
  avatar    String?  // url или ключ иконки
  role      String   // "gm" | "player"
  hp        Int      @default(10)
  gold      Int      @default(0)
  desc      String   @default("")
  game      Game     @relation(fields: [gameId], references: [id])
  gameId    String
  items     Item[]   @relation("OwnerItems")
  createdAt DateTime @default(now())
}

model Item {
  id         String   @id @default(cuid())
  title      String
  kind       String   @default("item") // "item"|"gold"
  amount     Int      @default(1)      // для gold
  onFloor    Boolean  @default(false)
  revealed   Boolean  @default(false)  // появляется игроку по «Осмотреться»
  game       Game     @relation(fields: [gameId], references: [id])
  gameId     String
  owner      Player?  @relation("OwnerItems", fields: [ownerId], references: [id])
  ownerId    String?
  createdAt  DateTime @default(now())
}

model Location {
  id        String   @id @default(cuid())
  title     String
  descr     String   @default("")
  imageUrl  String?  // загружаемая картинка
  game      Game     @relation(fields: [gameId], references: [id])
  gameId    String
  createdAt DateTime @default(now())

  // обратная связь для currentLocation
  Game      Game[]   @relation("CurrentLocation")
}

model Message {
  id        String   @id @default(cuid())
  game      Game     @relation(fields: [gameId], references: [id])
  gameId    String
  authorId  String
  author    String
  text      String
  createdAt DateTime @default(now())
}
